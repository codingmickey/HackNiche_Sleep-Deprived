<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PensionFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/pension_post_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0"
                android:text="Post"
                android:textSize="22sp"
                android:textColor="@color/orange"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/pension_post_spinner"
                app:layout_constraintEnd_toEndOf="@id/pension_post_spinner"
                app:layout_constraintHorizontal_bias="0.04"
                app:layout_constraintStart_toStartOf="@id/pension_post_spinner"
                app:layout_constraintTop_toBottomOf="@id/pension_post_text"
                app:layout_constraintVertical_bias="0.2"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Post"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textSize="14sp"
                    android:textColor="@color/orange"/>

            </androidx.cardview.widget.CardView>

            <Spinner
                android:id="@+id/pension_post_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/pension_post_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:background="@drawable/style_spinner"
                android:padding="8dp"
                android:textSize="20sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/pension_qualifying_service_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pension_post_spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0"
                android:text="Total Qualifying Service"
                android:textSize="22sp"
                android:textColor="@color/orange"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/pension_qualifying_service_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/pension_qualifying_service_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintVertical_bias="0.0"
                android:weightSum="1.0"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/auth_box_bg">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pension_qualifying_service_years"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:hint="Years"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:inputType="number"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/auth_box_bg">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pension_qualifying_service_months"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:hint="Months"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:inputType="number"
                        />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/pension_emoluments_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pension_qualifying_service_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0"
                android:text="Sum of last 10 months Emoluments: (Basic Pay + NPA)\n(in Rs.)"
                android:textSize="22sp"
                android:textColor="@color/orange"
                android:textStyle="bold"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pension_emoluments_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/pension_emoluments_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginTop="15dp"
                android:layout_weight="0.5"
                android:background="@drawable/auth_box_bg">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pension_emoluments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Money"
                    android:background="#00000000"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:inputType="number"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pension_calculate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/pension_emoluments_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintVertical_bias="0.0"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_bg"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="60dp"
                android:paddingHorizontal="80dp"
                android:paddingVertical="8dp"
                android:text="Calculate"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/pension_amount_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pension_calculate_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0"
                android:text="The Pension you are elligible for is as follows"
                android:textSize="22sp"
                android:textColor="@color/orange"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/pension_amount"
                app:layout_constraintEnd_toEndOf="@id/pension_amount"
                app:layout_constraintHorizontal_bias="0.04"
                app:layout_constraintStart_toStartOf="@id/pension_amount"
                app:layout_constraintTop_toBottomOf="@id/pension_amount_text"
                app:layout_constraintVertical_bias="0.2"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pension Amount"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textSize="14sp"
                    android:textColor="@color/orange"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/pension_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/pension_amount_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/auth_box_bg"
                android:hint="Amount"
                android:padding="8dp"
                android:textSize="22sp"
                android:textColor="@color/black"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>